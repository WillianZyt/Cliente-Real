{% extends 'base.html.twig' %}

{% set languagesEnum = enum('App\\Entity\\Enum\\LanguageEnum') %}

{% block title %}Banners
{% endblock %}

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script>
		$(document).ready(function () {
$('#tabela').DataTable({
"lengthMenu": [
[
10,
25,
50,
100,
-1
],
[
10,
25,
50,
100,
"Todos"
]
],
"language": {
"lengthMenu": "Mostrar _MENU_ registros por página",
"zeroRecords": "Nenhum registro encontrado",
"info": "Mostrando página _PAGE_ de _PAGES_",
"infoEmpty": "Nenhum registro disponível",
"infoFiltered": "(filtrado de _MAX_ registros no total)",
"search": "Buscar:",
"paginate": {
"first": "Primeiro",
"last": "Último",
"next": "Próximo",
"previous": "Anterior"
}
}
});
});
	</script>
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="https://cdn.datatables.net/2.1.0/css/dataTables.dataTables.css"/>
	<script src="https://cdn.datatables.net/2.1.0/js/dataTables.js"></script>

	<div class="row text-end">
		<div class="col">
			<a class="mb-3 btn btn-success text-white" href="{{ path('app_admin_banner_new') }}">Novo</a>
		</div>
	</div>

	<div class="card">
		<h5 class="card-header">Banners</h5>
		<div class="card-body">
			<table class="table" id="tabela">
				<thead>
					<tr>
						<th>Status</th>
						<th>Posição</th>
						<th>Imagem</th>
						<th>Título</th>
						<th class="acoes">Ações</th>
					</tr>
				</thead>
				<tbody>
					{% for banner in banners %}
						<tr>
							<td>
							{% if banner.active == 1 %}
								<span class="badge badge-sm bg-success ms-auto">Ativo</span>
							{% else %}
								<span class="badge badge-sm bg-danger ms-auto">Inativo</span>
							{% endif %}

							</td>
							<td>{{ banner.position }}</td>
							<td>{{ banner.image }}</td>
							<td>{{ banner.title }}</td>
							<td>
								<a class="btn btn-primary float-end" href="{{ path('app_admin_banner_edit', {'id': banner.id}) }}">
									editar
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Sem registros</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<style>
		/* CSS para ocultar a coluna "Ações" */
		.acoes {
			display: none;
		}
	</style>

{% endblock %}
