{{ form_start(form) }}
    <div class="mb-3">
        <label for="{{ form.title.vars.id}}" class="form-label">Nome</label>
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
	    <label for="{{ form.language.vars.id}}" class="form-label">Idioma</label>
	    {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
	    <div id="emailHelp" class="form-text">Informe o idioma da categoria.</div>
    </div>

    <div class="mb-3">
        <label for="{{ form.imageFile.vars.id}}" class="form-label">Imagem</label>
        {{ form_widget(form.imageFile)}}
        {% if product_category.imageFile is not empty %}
            <img class= "mt-3" src="{{ vich_uploader_asset(product_category, 'imageFile') }}" width="150" />
        {% endif %}
    </div>

    <button class="btn btn-info mt-3 float-start text-white">Salvar</button>
{{ form_end(form) }}
