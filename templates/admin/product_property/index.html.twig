{% extends 'base.html.twig' %}

{% set languagesEnum = enum('App\\Entity\\Enum\\LanguageEnum') %}

{% block title %}Lista de Propriedades dos Produtos
{% endblock %}

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script>
		$(document).ready(function () {
$('#tabela').DataTable({
        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Todos"]],
        "language": {
            "lengthMenu": "Mostrar _MENU_ registros por página",
            "zeroRecords": "Nenhum registro encontrado",
            "info": "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty": "Nenhum registro disponível",
            "infoFiltered": "(filtrado de _MAX_ registros no total)",
            "search": "Buscar:",
            "paginate": {
                "first": "Primeiro",
                "last": "Último",
                "next": "Próximo",
                "previous": "Anterior"
            }
        }
    });
});
	</script>
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="https://cdn.datatables.net/2.1.0/css/dataTables.dataTables.css"/>
	<script src="https://cdn.datatables.net/2.1.0/js/dataTables.js"></script>

	<div class="row text-end">
		<div class="col">
			<a class="mb-3 btn btn-success text-white" href="{{ path('app_admin_product_property_new') }}">Novo</a>
		</div>
	</div>

	<div class="card">
		<h5 class="card-header">Propriedades dos Produtos</h5>
		<div class="card-body">
			<table class="table" id="tabela">
				<thead>
					<tr>
						<th>Título</th>
						<th>Idioma</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for product_property in product_properties %}
						<tr>
							<td>{{ product_property.title }}</td>
							<td>
								{{ languagesEnum.getFlag(product_property.language)|raw }}
							</td>
							<td>
								<a class="btn btn-primary float-end" href="{{ path('app_admin_product_property_edit', {'id': product_property.id}) }}">editar</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">Sem registros</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
